{
  "$schema": "https://claude.ai/schemas/settings.json",
  "language": "en",
  "lsp": {
    "typescript-language-server": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "rootPatterns": ["tsconfig.json", "package.json"],
      "filetypes": ["typescript", "typescriptreact"]
    },
    "eslint": {
      "command": "vscode-eslint-language-server",
      "args": ["--stdio"],
      "rootPatterns": [".eslintrc.js", "package.json"],
      "filetypes": ["javascript", "javascriptreact", "typescript", "typescriptreact"]
    }
  },
  "hooks": {
    "PreToolUse": [
      {
        "pattern": "Edit(*.ts,*.tsx)",
        "command": ".claude/scripts/hooks/typecheck.sh"
      },
      {
        "pattern": "Edit(*.ts,*.tsx,*.js,*.jsx)",
        "command": ".claude/scripts/hooks/lint.sh"
      },
      {
        "pattern": "Bash(git reset,git revert,git delete)",
        "command": ".claude/scripts/hooks/branch-guard.sh $TOOL"
      }
    ],
    "PostToolUse": [
      {
        "pattern": "Edit(*.ts,*.tsx)",
        "command": ".claude/scripts/hooks/typecheck.sh"
      },
      {
        "pattern": "Write(*.ts,*.tsx)",
        "command": ".claude/scripts/hooks/typecheck.sh"
      }
    ],
    "Stop": [
      {
        "pattern": "*",
        "command": ".claude/scripts/hooks/check-todos.sh"
      }
    ]
  }
}
