{
  "$schema": "https://cdn.jsdelivr.net/npm/claude-code-settings@1.0.0/schema.json",
  "language": "en",
  "alwaysThinkingEnabled": true,
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "serena",
    "grep-app",
    "sequential-thinking"
  ],
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(npm start:*)",
      "Bash(npm run build:*)",
      "Bash(npm install:*)",
      "Bash(npx:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(git:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(more:*)",
      "Bash(wc:*)",
      "Bash(du:*)",
      "Bash(df:*)",
      "Bash(chmod:*)",
      "Bash(chown:*)",
      "Bash(ln:*)",
      "Bash(echo:*)",
      "Bash(env)",
      "Bash(source:*)",
      "Bash(lsof:*)",
      "Bash(pkill:*)",
      "Bash(ps:*)",
      "Bash(jobs:*)",
      "Bash(bg:*)",
      "Bash(fg:*)",
      "Bash(top:*)",
      "Bash(htop:*)",
      "Bash(kill:*)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(cut:*)",
      "Bash(paste:*)",
      "Bash(tr:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(jq:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(ts-node:*)",
      "Bash(tsx:*)",
      "Bash(nodemon:*)",
      "Bash(tar:*)",
      "Bash(zip:*)",
      "Bash(unzip:*)",
      "Bash(gzip:*)",
      "Bash(gunzip:*)",
      "WebSearch",
      "Read",
      "Glob",
      "Grep",
      "Edit",
      "Write"
    ],
    "ask": [],
    "deny": [
      "Bash(sudo:*)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)",
      "Bash(halt:*)",
      "Bash(poweroff:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(parted:*)",
      "Bash(format:*)",
      "Bash(passwd:*)",
      "Bash(iptables:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/hooks/typecheck.sh"
          },
          {
            "type": "command",
            "command": ".claude/scripts/hooks/lint.sh"
          }
        ]
      },
      {
        "matcher": "bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/hooks/branch-guard.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/hooks/typecheck.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/hooks/check-todos.sh"
          }
        ]
      }
    ]
  },
  "lsp": {
    "typescript": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "scopes": ["typescript", "typescriptreact"]
    },
    "javascript": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "scopes": ["javascript", "javascriptreact"]
    },
    "python": {
      "command": "pyright-langserver",
      "args": ["--stdio"],
      "scopes": ["python"]
    },
    "go": {
      "command": "gopls",
      "args": ["serve"],
      "scopes": ["go", "gomod"]
    },
    "rust": {
      "command": "rust-analyzer",
      "scopes": ["rust"]
    }
  }
}
